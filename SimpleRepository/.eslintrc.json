{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "angular": false,
    "moment": false,
    "_": false,
    "$": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "no-underscore-dangle" : "off",
    "class-methods-use-this" : "off",
    "no-unused-vars" : "off"
  }
}
